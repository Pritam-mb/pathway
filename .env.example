# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# External Data Sources (comma-separated)
# Options: WHO, FDA, CDC, MOCK:http://localhost:5000/alerts
EXTERNAL_NEWS_SOURCES=MOCK:http://localhost:5000/alerts

# Service Ports
API_PORT=8000
MOCK_SITE_PORT=5000
DASHBOARD_PORT=3000

# Pathway Configuration
PATHWAY_DATA_DIR=./data/hospital_docs
PATHWAY_CACHE_DIR=./.pathway_cache

# Mock Site URL
EXTERNAL_NEWS_URL=http://localhost:5000/alerts

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.0
EMBEDDING_MODEL=text-embedding-3-small

# Agent Configuration
AGENT_MAX_ITERATIONS=10
SAFETY_THRESHOLD=75

# Demo Mode
DEMO_MODE=true
